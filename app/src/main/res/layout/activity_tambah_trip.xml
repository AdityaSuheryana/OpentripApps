<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahTrip">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="109dp"
        android:layout_marginBottom="585dp"
        android:lineSpacingExtra="8sp"
        android:textColor="#000000"
        android:textSize="30sp"
        tools:text="Membuat Trip" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:transitionName="image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_logo"/>

    <EditText
        android:id="@+id/edtTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="459dp"
        android:hint="Nama Trip"
        android:inputType="textPersonName"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/edtIdTrip"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="518dp"
        android:hint="ID TRIP"
        android:inputType="textPersonName"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/edtTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="406dp"
        android:ems="10"
        android:hint="Tanggal Berangkat"
        android:inputType="date"
        android:textColorHint="@color/gray" />


    <EditText
        android:id="@+id/edtTglPulang"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="352dp"
        android:ems="10"
        android:hint="Tanggal Pulang"
        android:inputType="date"
        android:textColorHint="@color/gray" />

    <Button
        android:id="@+id/btnDaftarTrip"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button"
        android:text="Membuat Trip"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edtDeskripsi"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="298dp"
        android:ems="10"
        android:hint="deskripsi perjalanan"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/edtMeetingPoint"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="239dp"
        android:ems="10"
        android:hint="Titik Bertemu"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="215dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="187dp"
        />

    <Button
        android:id="@+id/btnPilihFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="180dp"
        android:text="Pilih Gambar" />


</RelativeLayout>